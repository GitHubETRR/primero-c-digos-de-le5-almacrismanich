#include <stdio.h>

int Dimension(char cadena[]) {
    int i = 0;

    while (cadena[i] != '\0') {
        i++;
    }

    return i;
}

int main() {
    char texto[100];
    int largo;

    printf("ingrese un texto: ");
    fgets(texto, 100, stdin);

    largo = Dimension(texto);

    printf("el largo de la cadena es: %d\n", largo);

    return 0;
}
