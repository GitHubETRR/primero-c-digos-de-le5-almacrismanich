#include <stdio.h>

int contarVocales(char cadena[]) {
    int i = 0, contador = 0;

    while (cadena[i] != '\0') {
        char c = cadena[i];

        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
            c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U') {
            contador++;
        }

        i++;
    }

    return contador;
}

int main() {
    char texto[100];

    printf("Ingrese un texto: ");
    fgets(texto, 100, stdin);

    int cant = contarVocales(texto);

    printf("Cantidad de vocales: %d\n", cant);

    return 0;
}

